import cv2
import time
import os

# Specify the folder containing the images
image_folder = "/path/to/your/images"

# Get a list of image files in the folder
image_files = [f for f in os.listdir(image_folder) if f.endswith(('.png', '.jpg', '.jpeg', '.gif'))]

# Sort the image files for display order (if needed)
image_files.sort()

# Create an OpenCV window
cv2.namedWindow("Image Viewer", cv2.WINDOW_NORMAL)

# Loop through the image files and display them one by one
for image_file in image_files:
    # Load and display the image using OpenCV
    image_path = os.path.join(image_folder, image_file)
    img = cv2.imread(image_path)

    if img is not None:
        cv2.imshow("Image Viewer", img)
        
        # Wait for 5 seconds (5000 milliseconds)
        cv2.waitKey(5000)

        # Close the image window
        cv2.destroyAllWindows()

# Close the OpenCV window at the end
cv2.destroyAllWindows()
