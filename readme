import urllib.parse

# Load SVG content from a file
with open('path_to_svg_image.svg', 'r') as file:
    svg_content = file.read()

# URL-encode the SVG content
encoded_svg = urllib.parse.quote(svg_content)

# Create the data URI
data_uri = f"data:image/svg+xml;utf8,{encoded_svg}"

# Now you can use 'data_uri' in the src attribute of an img tag
html = f"""\
<html>
  <head></head>
  <body>
    <p>Hi, this is an inline SVG image:</p>
    <img src="{data_uri}" alt="Inline SVG Image">
  </body>
</html>
"""
